{
    "name": "ebilet/common",
    "description": "Common utilities and shared components for E-Bilet microservices",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "E-Bilet Team",
            "email": "dev@ebilet.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "php-amqplib/php-amqplib": "^3.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Ebilet\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ebilet\\Logging\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 