{
    "name": "ebilet/common",
    "description": "E-Bilet Common Package - Merkezi loglama ve ortak işlevler için",
    "version": "1.2.2",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "E-Bilet Team",
            "email": "dev@e-bilet.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "php-amqplib/php-amqplib": "^3.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Ebilet\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ebilet\\Common\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ebilet\\Common\\ServiceProviders\\LoggingServiceProvider",
                "Ebilet\\Common\\ServiceProviders\\ServiceCommunicationProvider"
            ]
        }
    },
    "suggest": {
        "laravel/sanctum": "For API authentication features",
        "predis/predis": "For Redis caching and session storage"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 